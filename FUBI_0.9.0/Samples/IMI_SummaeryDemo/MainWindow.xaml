<Window x:Class="IMI_SummaeryDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IMI Präsentationssoftware" 
        WindowState="Maximized"
        WindowStyle="None" 
        Background="Gainsboro"
        Cursor="None"
        Width="1920"
        Height="1080"
        KeyUp="Window_KeyUp">
    <Grid Width="Auto" Height="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
            
        <!-- Canvas -->
        <Canvas Name="canvas1" Background="Black" Grid.Column="1" Grid.Row="1"/>
        <Canvas Name="canvas2" Background="Black" Grid.Column="3" Grid.Row="1"/>
    </Grid>
</Window>
